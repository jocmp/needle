{
  "name": "needle",
  "type": "module",
  "scripts": {
    "dev": "bun run build && bun run --hot src/index.tsx",
    "start": "bun run src/index.tsx",
    "build": "tailwindcss -i ./src/styles/app.css -o ./public/styles.css --minify",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "check": "biome check --write .",
    "test": "bun test",
    "worker": "bun run src/worker.ts"
  },
  "dependencies": {
    "@node-rs/bcrypt": "^1.10.6",
    "croner": "^9.0.0",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.16",
    "postgres": "^3.4.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/cli": "^4.1.18",
    "@types/bun": "^1.1.14",
    "drizzle-kit": "^0.31.8",
    "tailwindcss": "^4.0.0"
  }
}
