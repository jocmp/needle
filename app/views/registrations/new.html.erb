<div class="max-w-md mx-auto text-center">
  <h1 class="font-display text-3xl text-burgundy-dark mb-2">Join Our Society</h1>
  <p class="text-aged italic mb-8">Register to receive the finest Threads</p>

  <div class="flex justify-center mb-6">
    <span class="text-gold">&#10070; &#10070; &#10070;</span>
  </div>

  <%= form_with model: @user, url: signup_path, class: "space-y-6 text-left" do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-burgundy/10 border-2 border-burgundy p-4">
        <p class="text-burgundy-dark font-semibold mb-2">Alas, errors were encountered:</p>
        <ul class="list-disc list-inside text-burgundy-dark text-sm italic">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email, "Email",
          class: "block text-sm font-semibold text-aged uppercase tracking-wide mb-1" %>
      <%= f.email_field :email,
          class: "w-full px-4 py-3 border-2 border-aged/30 bg-parchment focus:border-gold focus:outline-none font-body",
          required: true %>
    </div>

    <div>
      <%= f.label :password, "Password",
          class: "block text-sm font-semibold text-aged uppercase tracking-wide mb-1" %>
      <%= f.password_field :password,
          class: "w-full px-4 py-3 border-2 border-aged/30 bg-parchment focus:border-gold focus:outline-none font-body",
          required: true %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm Password",
          class: "block text-sm font-semibold text-aged uppercase tracking-wide mb-1" %>
      <%= f.password_field :password_confirmation,
          class: "w-full px-4 py-3 border-2 border-aged/30 bg-parchment focus:border-gold focus:outline-none font-body",
          required: true %>
    </div>

    <%= f.submit "Establish My Account",
        class: "w-full bg-burgundy text-gold py-3 px-6 uppercase tracking-widest
               hover:bg-burgundy-dark cursor-pointer transition-colors
               border-2 border-gold" %>
  <% end %>

  <div class="mt-8 pt-6 border-t border-aged/20">
    <p class="text-aged">
      Already a member?
      <%= link_to "Enter here", login_path,
          class: "text-burgundy hover:text-burgundy-dark underline" %>
    </p>
  </div>
</div>
